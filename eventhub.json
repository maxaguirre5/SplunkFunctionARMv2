{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "eventhub_namespace": {
            "defaultValue": "eventhub",
            "type": "String"
        },
        "resourceTags": {
            "type": "object",
            "defaultValue": {
                "Group": "Rackspace",
                "Rackspace-Service": "CNS"
            }
        }
    },
    "variables": {
        "namespace": "[parameters('eventhub_namespace')]",
        "eventHubSendRuleId": "[resourceId('Microsoft.EventHub/namespaces/eventhubs/authorizationRules', variables('namespace'),'security', 'Rackspace')]"
    },
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2018-01-01-preview",
            "name": "[variables('namespace')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('resourceTags')]",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "zoneRedundant": false,
                "isAutoInflateEnabled": false,
                "maximumThroughputUnits": 0,
                "kafkaEnabled": true
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/RootManageSharedAccessKey')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
                "messageRetentionInDays": 7,
                "partitionCount": 4,
                "status": "Active"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/networkRuleSets",
            "apiVersion": "2018-01-01-preview",
            "name": "[concat(variables('namespace'), '/default')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
                "defaultAction": "Deny",
                "virtualNetworkRules": [
                ],
                "ipRules": [
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security/ASC')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespace'), 'security')]",
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Send",
                    "Manage"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security/PreviewDataPolicy')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespace'), 'security')]",
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
                "rights": [
                    "Listen"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/authorizationRules",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security/Rackspace')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespace'), 'security')]",
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
                "rights": [
                    "Listen"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security/$Default')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespace'), 'security')]",
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security/preview_data_consumer_group')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespace'), 'security')]",
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2017-04-01",
            "name": "[concat(variables('namespace'), '/security/security')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', variables('namespace'), 'security')]",
                "[resourceId('Microsoft.EventHub/namespaces', variables('namespace'))]"
            ],
            "properties": {
            }
        }
    ],
    "outputs": {
        "eventhub": {
            "type": "string",
            "value": "[listkeys(variables('eventHubSendRuleId'), '2017-04-01').primaryConnectionString]"
        }
    }
}
